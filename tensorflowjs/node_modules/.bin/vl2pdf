#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir//bin/bash" ]; then
  exec "$basedir//bin/bash"  "$basedir/../vega-lite/bin/vl2pdf" "$@"
else 
  exec /bin/bash  "$basedir/../vega-lite/bin/vl2pdf" "$@"
fi
